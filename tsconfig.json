{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": false,
		"target": "es6",
		"outDir": "./dist"
	},
	"include": [
	  "./"
	],
	"exclude": [
		"node_modules",
		".vscode",
		".git",
		"**/*.spec.ts",
		"dist"
	]
  }